<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools"
                android:padding="@dimen/default_element_padding"
                android:layout_height="wrap_content">

    <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>

    <TextView
            android:drawablePadding="8dp"
            android:layout_marginRight="@dimen/default_element_padding"
            android:drawableLeft="@drawable/fairy_right_arm"
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/progressBar1"
            android:layout_marginLeft="@dimen/default_element_padding"
            android:layout_toRightOf="@+id/progressBar1"
            android:gravity="center_vertical|left"
            tools:text="Message"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_alignBottom="@+id/progressBar1"/>

</RelativeLayout>