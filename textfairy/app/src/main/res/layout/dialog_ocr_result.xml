<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:padding="@dimen/default_padding"
              android:background="#FFFFFF"
              android:orientation="vertical"
              android:layout_height="match_parent">

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/help_header"
              android:textSize="18sp"
              android:layout_marginTop="@dimen/default_padding_half"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical|left"
              android:drawableLeft="@drawable/warte3"
              android:drawablePadding="@dimen/default_padding"
              android:textStyle="bold"
              android:textAppearance="@style/FairySpeechbubble">
    </TextView>
    <View
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/divider0"
            android:background="@color/grey6"/>

    <TextView
            android:visibility="gone"
            android:text="@string/first_time_bad_result"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/default_padding"
            android:layout_marginBottom="@dimen/default_padding"
            android:id="@+id/explanation_text"
            android:padding="@dimen/default_padding_half"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/divider1"
            android:background="@color/grey6"/>

    <Button
            android:layout_marginTop="@dimen/default_padding"
            android:paddingLeft="@dimen/default_padding"
            android:paddingRight="@dimen/default_padding"
            android:id="@+id/button_show_tips"
            android:text="@string/show_tips"
            android:gravity="left|center"
            android:drawablePadding="@dimen/default_padding"
            android:drawableLeft="@drawable/ic_action_tips_light"
            android:layout_width="match_parent"
            android:background="@drawable/btn_start_activity2"
            android:layout_height="wrap_content"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/divider2"
            android:background="@color/grey6"/>

    <Button
            android:layout_marginTop="@dimen/default_padding"
            android:paddingLeft="@dimen/default_padding"
            android:paddingRight="@dimen/default_padding"
            android:id="@+id/button_send_feedback"
            android:text="@string/feedback_title"
            android:gravity="left|center"
            android:drawablePadding="@dimen/default_padding"
            android:drawableLeft="@drawable/ic_action_feedback"
            android:layout_width="match_parent"
            android:background="@drawable/btn_start_activity2"
            android:layout_height="wrap_content"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/divider3"
            android:background="@color/grey6"/>

    <Button
            android:id="@+id/button_share_text"
            android:text="@string/share_text"
            android:gravity="left|center"
            android:drawablePadding="@dimen/default_padding"
            android:paddingLeft="@dimen/default_padding"
            android:paddingRight="@dimen/default_padding"
            android:drawableLeft="@drawable/ic_action_share_dark"
            android:layout_width="match_parent"
            android:background="@drawable/btn_start_activity2"
            android:layout_height="wrap_content"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/divider4"
            android:background="@color/grey6"/>

    <Button
            android:id="@+id/button_copy_to_clipboard"
            android:text="@string/copy_to_clipboard"
            android:gravity="left|center"
            android:drawablePadding="@dimen/default_padding"
            android:paddingLeft="@dimen/default_padding"
            android:paddingRight="@dimen/default_padding"
            android:drawableLeft="@drawable/ic_action_content_copy_dark"
            android:layout_width="match_parent"
            android:background="@drawable/btn_start_activity2"
            android:layout_height="wrap_content"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/divider5"
            android:background="@color/grey6"/>
    
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/divider6"
            android:background="@color/grey6"/>

    <Button
            android:paddingLeft="@dimen/default_padding"
            android:paddingRight="@dimen/default_padding"
            android:id="@+id/button_export_pdf"
            android:text="@string/export_as_pdf"
            android:gravity="left|center"
            android:drawablePadding="@dimen/default_padding"
            android:drawableLeft="@drawable/ic_action_pdf_dark"
            android:layout_width="match_parent"
            android:background="@drawable/btn_start_activity2"
            android:layout_height="wrap_content"/>


</LinearLayout>